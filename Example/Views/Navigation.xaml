<UserControl x:Class="Example.Views.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:Example.ViewModels"
             xmlns:local="clr-namespace:Example.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance model:ViewModelNavigationManager}">
    
    <!--hold the current view model-->
    <ContentControl Content="{Binding CurrentViewModel}"/>

</UserControl>
